<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>
<?import org.fxmisc.richtext.StyleClassedTextArea?>

<VBox xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <CodeArea fx:id="_textArea_loop" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
      <TextField fx:id="_textField_invariant" maxWidth="1.7976931348623157E308" />
      <Button fx:id="_button_suggest" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Suggest" />
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="post condition check:" />
                  <StyleClassedTextArea fx:id="_textArea_question_postCond" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                  <Button fx:id="_button_yes" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Confirm post" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="loop invariant check:" />
                  <StyleClassedTextArea fx:id="_textArea_question_invariant" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                  <Button fx:id="_button_abort" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Abort" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
